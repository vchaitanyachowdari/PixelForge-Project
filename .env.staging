# PixelForge Staging Environment Configuration
# This file contains staging-specific environment variables

# Application Configuration
NODE_ENV=staging
VITE_APP_NAME=PixelForge Staging
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="AI-powered image generation platform (Staging)"

# Frontend Configuration
VITE_API_URL=https://staging-api.pixelforge.app
VITE_APP_URL=https://staging.pixelforge.app

# Security Configuration
JWT_SECRET=${JWT_SECRET_STAGING}
ENCRYPTION_KEY=${ENCRYPTION_KEY_STAGING}

# AI Services Configuration
OPENAI_API_KEY=${OPENAI_API_KEY_STAGING}
GOOGLE_CLOUD_PROJECT_ID=${GOOGLE_CLOUD_PROJECT_ID_STAGING}
GOOGLE_CLOUD_LOCATION=us-central1

# Database Configuration
DATABASE_URL=${DATABASE_URL_STAGING}
DATABASE_AUTH_TOKEN=${DATABASE_AUTH_TOKEN_STAGING}

# Mocha Authentication Service
MOCHA_USERS_SERVICE_API_URL=https://api.getmocha.com
MOCHA_USERS_SERVICE_API_KEY=${MOCHA_USERS_SERVICE_API_KEY_STAGING}

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=${CLOUDFLARE_ACCOUNT_ID}
CLOUDFLARE_ZONE_ID=${CLOUDFLARE_ZONE_ID_STAGING}

# File Storage Configuration
STORAGE_BUCKET=${STORAGE_BUCKET_STAGING}
STORAGE_REGION=auto

# Monitoring and Analytics
SENTRY_DSN=${SENTRY_DSN_STAGING}
ANALYTICS_ID=${ANALYTICS_ID_STAGING}

# Rate Limiting (Staging values)
RATE_LIMIT_MAX_REQUESTS=75
RATE_LIMIT_WINDOW_MS=900000

# Payment Configuration (Test keys)
STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY_TEST}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_TEST}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET_TEST}

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER_STAGING}
SMTP_PASS=${SMTP_PASS_STAGING}

# Feature Flags (Staging settings)
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=false

# Performance Configuration
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET=es2020