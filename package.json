{
  "name": "pixelforge",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered image generation platform with professional tools and user management",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ai",
    "image-generation",
    "cloudflare-workers",
    "react",
    "typescript",
    "hono"
  ],
  "author": "PixelForge Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vchaitanyachowdari/PixelForge-Project.git"
  },
  "bugs": {
    "url": "https://github.com/vchaitanyachowdari/PixelForge-Project/issues"
  },
  "homepage": "https://pixelforge.app",
  "dependencies": {
    "@google-cloud/aiplatform": "^5.6.0",
    "@hono/zod-validator": "^0.5.0",
    "hono": "4.7.7",
    "lucide-react": "^0.510.0",
    "openai": "^5.16.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router": "^7.5.3",
    "zod": "^3.24.3",
    "uuid": "^9.0.1",
    "date-fns": "^3.6.0",
    "clsx": "^2.1.1",
    "react-error-boundary": "^4.0.13",
    "react-hot-toast": "^2.4.1"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.12.0",
    "@eslint/js": "9.25.1",
    "@getmocha/vite-plugins": "latest",
    "@getmocha/users-service": "^0.0.4",
    "@types/node": "22.14.1",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "4.4.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/user-event": "^14.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "9.25.1",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "eslint-plugin-testing-library": "^6.2.2",
    "globals": "15.15.0",
    "jsdom": "^24.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.3",
    "typescript-eslint": "8.31.0",
    "vite": "^6.2.0",
    "vitest": "^1.6.0",
    "wrangler": "^4.33.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:production": "NODE_ENV=production npm run build",
    "preview": "vite preview",
    "cf-typegen": "wrangler types ./wrangler-env.d.ts",
    "check": "tsc && vite build && wrangler deploy --dry-run",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "db:migrate": "wrangler d1 migrations apply",
    "db:migrate:staging": "wrangler d1 migrations apply --env staging",
    "db:migrate:production": "wrangler d1 migrations apply --env production",
    "prepare": "npm run type-check"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
