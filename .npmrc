# NPM Configuration for PixelForge
# Handles peer dependency conflicts with React 19 and modern tooling

# Use legacy peer deps to resolve conflicts with older packages
legacy-peer-deps=true

# Prefer exact versions for security
save-exact=true

# Enable package-lock for consistent installs
package-lock=true

# Set fund to false to reduce noise during installs
fund=false

# Set audit level to moderate for security
audit-level=moderate