# PixelForge Production Environment Configuration
# This file contains production-specific environment variables

# Application Configuration
NODE_ENV=production
VITE_APP_NAME=PixelForge
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="AI-powered image generation platform"

# Frontend Configuration
VITE_API_URL=https://api.pixelforge.app
VITE_APP_URL=https://pixelforge.app

# Security Configuration (Use secure values in production)
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# AI Services Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
GOOGLE_CLOUD_PROJECT_ID=${GOOGLE_CLOUD_PROJECT_ID}
GOOGLE_CLOUD_LOCATION=us-central1

# Database Configuration
DATABASE_URL=${DATABASE_URL}
DATABASE_AUTH_TOKEN=${DATABASE_AUTH_TOKEN}

# Mocha Authentication Service
MOCHA_USERS_SERVICE_API_URL=https://api.getmocha.com
MOCHA_USERS_SERVICE_API_KEY=${MOCHA_USERS_SERVICE_API_KEY}

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=${CLOUDFLARE_ACCOUNT_ID}
CLOUDFLARE_ZONE_ID=${CLOUDFLARE_ZONE_ID}

# File Storage Configuration
STORAGE_BUCKET=${STORAGE_BUCKET}
STORAGE_REGION=auto

# Monitoring and Analytics
SENTRY_DSN=${SENTRY_DSN}
ANALYTICS_ID=${ANALYTICS_ID}

# Rate Limiting (Production values)
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_WINDOW_MS=900000

# Payment Configuration
STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# Feature Flags (Production settings)
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true

# Performance Configuration
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET=es2020