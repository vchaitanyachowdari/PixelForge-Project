# PixelForge Environment Configuration
# Copy this file to .env.local for development

# Application Configuration
NODE_ENV=development
VITE_APP_NAME=PixelForge
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="AI-powered image generation platform"

# Frontend Configuration
VITE_API_URL=http://localhost:8787
VITE_APP_URL=http://localhost:5173

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Mocha Authentication Service
MOCHA_USERS_SERVICE_API_URL=https://api.getmocha.com
MOCHA_USERS_SERVICE_API_KEY=your_mocha_api_key

# AI Services Configuration
OPENAI_API_KEY=your_openai_api_key
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_LOCATION=us-central1

# Database Configuration
DATABASE_URL=your_database_connection_string
DATABASE_AUTH_TOKEN=your_database_auth_token

# Security Configuration
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# File Storage Configuration
STORAGE_BUCKET=your_storage_bucket
STORAGE_REGION=auto

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_analytics_id

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Payment Configuration (for future use)
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false